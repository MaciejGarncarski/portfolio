---
export const prerender = true;

import { Picture } from "astro:assets";
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout>
  <div class="mx-auto flex flex-col gap-8 pb-8 lg:w-[45rem]">
    <h1 class="text-center text-balance lg:text-lg">Lu≈∫ny mikro blog</h1>
    <div class="flex flex-col gap-6 text-sm lg:gap-8">
      {
        posts.map((post) => {
          const formattedTime = new Intl.DateTimeFormat("pl").format(
            post.data.pubDate
          );

          return (
            <a
              href={"/blog/" + post.id}
              class="transition-transform duration-300 lg:hover:-translate-y-1 lg:focus:scale-[0.98]">
              <article class="shadow-blog bg-muted relative flex h-30 flex-col gap-4 overflow-hidden rounded p-4">
                <div class="before:bg-blog-gradient absolute top-0 right-0 z-20 flex h-full items-center justify-end opacity-50 before:absolute before:h-full before:w-full before:content-[''] lg:opacity-80">
                  <Picture
                    format="avif"
                    src={post.data.heroImage}
                    width={256}
                    height={256}
                    alt={post.data.title}
                    class="h-40 w-40"
                  />
                </div>
                <header class="aling-center z-40 flex items-start justify-between text-base">
                  <h2 class="text-foreground w-[65%] text-sm font-semibold text-pretty lg:text-base">
                    {post.data.title}
                  </h2>
                  <p class="before:bg-background/90 relative text-sm before:absolute before:top-0 before:left-0 before:-z-10 before:h-full before:w-full before:blur-lg lg:text-base">
                    <time datetime={formattedTime}>{formattedTime}</time>
                  </p>
                </header>
                <p class="text-muted-foreground z-20 text-xs text-pretty lg:max-w-[28rem] lg:text-sm">
                  {post.data.description}
                </p>
              </article>
            </a>
          );
        })
      }
    </div>
  </div>
</Layout>
